<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- FMS Service -->
        <service id="fms_service" class="MainBundle\Services\FmsService">
        </service>

        <!-- service for multiple route card form -->
        <service id="fmc.multiple.route.card" class="MainBundle\Form\Type\ProductRouteCardType">
            <tag name="form.type" alias="route_card_type" />
        </service>

        <!-- service for multiple component form -->
        <service id="fmc.multiple.component" class="MainBundle\Form\Type\ProductComponentType">
            <tag name="form.type" alias="component_type" />
        </service>

        <service id="fms.listener.resolver" class="MainBundle\Listener\MyEntityListenerResolver">
            <argument type="service" id="service_container" />
        </service>

        <!-- service doctrine listener -->
        <service id="fms.doctrine.listener" class="MainBundle\Listener\DoctrineListener">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_listener" event = "preUpdate" method="preUpdate" />
            <tag name="doctrine.event_listener" event = "postFlush" method="postFlush" />
            <tag name="doctrine.event_listener" event = "prePersist" method="prePersist" />
        </service>

        <!-- service for update route card sum  -->
        <service id="tariff_update_listener" class="MainBundle\EventListener\UpdateTariffListener">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_listener" event = "onFlush" method = "onFlush"/>
        </service>
    </services>

</container>

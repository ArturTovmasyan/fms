<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--  FMS Service -->
        <service id="fms_service" class="MainBundle\Services\FmsService">
            <argument type="service" id="service_container" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <!-- service for multiple route card form -->
        <service id="fmc.multiple.route.card" class="MainBundle\Form\Type\ProductRouteCardType">
            <tag name="form.type" alias="route_card_type" />
        </service>

        <!-- service for multiple component form -->
        <service id="fmc.multiple.component" class="MainBundle\Form\Type\ProductComponentType">
            <tag name="form.type" alias="component_type" />
        </service>

        <!--fms multiple equipment file service-->
        <service id="bl.multiple.equipmenq.file" class="MainBundle\Form\Type\EqMultipleFileType">
            <tag name="form.type" alias="eq_multiple_file" />
        </service>

        <!--fms multiple materials file service-->
        <service id="bl.multiple.material.file" class="MainBundle\Form\Type\MaterialMultipleFileType">
            <tag name="form.type" alias="material_multiple_file" />
        </service>

        <!--fms multiple spare part file service-->
        <service id="bl.multiple.spare.part.file" class="MainBundle\Form\Type\MaterialMultipleFileType">
            <tag name="form.type" alias="spare_part_multiple_file" />
        </service>

        <!-- service for update route card sum  -->
        <service id="tariff_update_listener" class="MainBundle\EventListener\UpdateTariffListener">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_listener" event = "onFlush" method = "onFlush"/>
        </service>
    </services>

</container>

            <argument>MainBundle\Entity\Professions</argument>
            <argument/>
        </service>

        <!--SalariesType-->
        <service id="sonata.admin.main.salaries.type" class="MainBundle\Admin\SalariesTypeAdmin">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false" group="Salary" label="SalariesType"/>
            <argument/>
            <argument>MainBundle\Entity\SalariesType</argument>
            <argument/>
        </service>

        <!--ProfessionCategory-->
        <service id="sonata.admin.main.profession.category" class="MainBundle\Admin\ProfessionCategoryAdmin">
